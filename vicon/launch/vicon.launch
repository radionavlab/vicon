<launch>
  <node pkg="vicon"
    type="vicon"
    name="vicon"
    output="screen">
    <param name="vicon_server" value="192.168.1.100"/>
    <param name="calib_files_dir" value="$(find vicon)/calib"/>
  </node>

  <arg name="publish_tf" default="false"/>
  <arg name="vicon_fps" default="500"/>
  <arg name="output" default="screen"/>

  <arg name="model1" default="Frodo"/>
  <arg name="child_frame_id" default="$(arg model1)/base_link"/>
  <node pkg="vicon_odom" type="vicon_odom" name="$(arg model1)"
    output="$(arg output)" ns="vicon">
    <param name="model" type="string" value="$(arg model1)"/>
    <param name="child_frame_id" type="string" value="$(arg child_frame_id)"/>
    <param name="publish_tf" type="bool" value="$(arg publish_tf)"/>
    <param name="vicon_fps" type="int" value="$(arg vicon_fps)"/>
    <remap from="~vicon_subject" to="$(arg model1)"/>
    <remap from="~odom" to="/$(arg model1)/odom"/>
  </node>

  <arg name="model2" default="Bilbo"/>
  <arg name="child_frame_id2" default="$(arg model2)/base_link"/>
  <node pkg="vicon_odom" type="vicon_odom" name="$(arg model2)"
    output="$(arg output)" ns="vicon">
    <param name="model" type="string" value="$(arg model2)"/>
    <param name="child_frame_id" type="string" value="$(arg child_frame_id2)"/>
    <param name="publish_tf" type="bool" value="$(arg publish_tf)"/>
    <param name="vicon_fps" type="int" value="$(arg vicon_fps)"/>
    <remap from="~vicon_subject" to="$(arg model2)"/>
    <remap from="~odom" to="/$(arg model2)/odom"/>
  </node>

  <arg name="model3" default="hippogryph"/>
  <arg name="child_frame_id3" default="$(arg model3)/base_link"/>
  <node pkg="vicon_odom" type="vicon_odom" name="$(arg model3)"
    output="$(arg output)" ns="vicon">
    <param name="model" type="string" value="$(arg model3)"/>
    <param name="child_frame_id" type="string" value="$(arg child_frame_id3)"/>
    <param name="publish_tf" type="bool" value="$(arg publish_tf)"/>
    <param name="vicon_fps" type="int" value="$(arg vicon_fps)"/>
    <remap from="~vicon_subject" to="$(arg model3)"/>
    <remap from="~odom" to="/$(arg model3)/odom"/>
  </node>

  <node respawn="true" pkg="joy" type="joy_node" name="joy" >
        <param name="dev" type="string" value="/dev/input/js0" />
        <param name="deadzone" value="0.15" />
	<param name="autorepeat_rate" value="20" />
  </node>

    <!-- <node name="phoenix_joy" pkg="topic_tools" type="relay"
      args="/joy /$(arg model)/joy" /> -->
</launch>
